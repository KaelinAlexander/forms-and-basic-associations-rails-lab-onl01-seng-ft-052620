<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |artist| %>
    <option value="<%= artist.name %>">
      <% end %>
  </datalist>
  <br>
  <%= f.text_field :genre_name, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
    <option value="<%= genre.name %>">
      <% end %>
  </datalist>
  <br>
  <input id="song_notes_1" name="song[note_ids][]">
  <br>
  <input id="song_notes_2" name="song[note_ids][]">
  <%= f.submit %>
<% end %>
